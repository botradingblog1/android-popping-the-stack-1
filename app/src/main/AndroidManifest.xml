<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.justmobiledev.androidpoppingstack1">

    <uses-permission android:name="android.permission.GET_TASKS"/>

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ActivityA"
            android:label="@string/title_activity_a"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".ActivityB"
            android:label="@string/title_activity_b"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ActivityC"
            android:label="@string/title_activity_c"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".task2.ActivityATask2"
            android:taskAffinity="com.justmobiledev.androidpoppingstack1.task2"
            android:label="@string/title_activity_a_task2"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".task2.ActivityBTask2"
            android:taskAffinity="com.justmobiledev.androidpoppingstack1.task2"
            android:label="@string/title_activity_b_task2"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".task2.ActivityCTask2"
            android:taskAffinity="com.justmobiledev.androidpoppingstack1.task2"
            android:label="@string/title_activity_c_task2"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>
</manifest>